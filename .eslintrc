{
  "parser": "babel-eslint",
  "extends": ["semistandard"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "indent": [2, 4, { "SwitchCase": 1}],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "plugins": [
    "flowtype",
    "flowtype-errors",
    "import",
    "promise",
    "compat",
    "react"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.eslint.js"
      }
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
